<!-- followPage displays the sidenav bar and the follower links for any follower related page -->

{% extends 'master' %}

{% block content %}
    {% if currentUser %}
        <div class="container-fluid">
            <div class="row content">
                <div class="col-sm-3 sidenav">
                    <h4>{{ currentUser.first_name }}'s Blog</h4>
                    <ul class="nav nav-pills nav-stacked">
                        <li><a href="/post/feed">Feed</a></li>
                        <li><a href="/follower/followers">Followers</a></li>
                    </ul>
                </div>
                <div class="col-sm-9">
                    <div class="container-fluid">
                        <ul class="nav navbar-nav">
                            {% if currentUser %}
                                <li><a href="/follower/followers">Followers</a></li>
                                <li><a href="/follower/following">Following</a></li>
                                <li><a href="/follower/newFollowers">Find people to follow</a></li>
                            {% endif %}
                        </ul>
                    </div>
                    {% block followers %}
                    {% endblock %}
                </div>
            </div>
        </div>
    {% else %}
        <script> window.location.replace("/") </script>
    {% endif %}
{% endblock %}