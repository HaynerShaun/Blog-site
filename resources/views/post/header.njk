<!-- header contains the sidenav for the post related pages -->

{% extends 'master' %}

{% block content %}
    {% if currentUser %}
    <div class="container-fluid">
        <div class="row content">
            <div class="col-sm-3 sidenav">
                <h4>{{ currentUser.first_name }}'s Blog</h4>
                <ul class="nav nav-pills nav-stacked">
                    <li><a href="/post/feed">Feed</a></li>
                    <li><a href="/follower/followers">Followers</a></li>
                </ul><br>
            </div>

            <div class="col-sm-9">
                <section>
                    {% block display %}{% endblock %}
                </section>
            </div>
        </div>
    </div>
    {% endif %}
{% endblock %}