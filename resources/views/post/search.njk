<!-- search display any posts that match what the user searched for -->

{% extends 'post/header' %}

{% block display %}
    <div>
      <a href="/post/feed"> Back </a>
    </div>
    <hr>
    <h2>Search Results:</h2>
    <div class="posts-wrapper" id="post_display" >
        {% for post in posts %} 
            <div class='post'>
                <h2><a href='/post/post/{{ post.id }}'> {{ post.title }} </a></h2> 
                <p> {{ post.content }} </p>
                <p><small>Posted by: {{ post.created_at }} by 
                    <a href="/user/user/{{ post.display_name }}"> {{ post.display_name }} </a>
                </small></p>
            </div>
        {% else %}
            <h2> No posts found </h2>
        {% endfor %}
    </div>
{% endblock %}